{
  "compilerOptions": {
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2020",
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "pretty": true,
    "strict": true,

    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": ".",
    "noImplicitThis": true,
    "allowJs": false,
    "paths": {
        "*": ["./typings/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./node_modules/types-bn/index.d.ts",
    "./globals.d.ts",
    "./globalsAugmented.d.ts"
  ]
}
